# Server
PORT=4000
NODE_ENV=development
LOG_LEVEL=debug

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/rivvi

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Buckets
S3_BUCKET_RAW=rivvi-raw-uploads
S3_BUCKET_PROCESSED=rivvi-processed-data
S3_BUCKET_LOGS=rivvi-call-logs

# DynamoDB Tables
DYNAMODB_DEDUP_TABLE=rivvi-patient-dedup
DYNAMODB_RUN_STATE_TABLE=rivvi-run-states
DYNAMODB_WEBHOOK_TABLE=rivvi-webhooks
DYNAMODB_CALLS_TABLE=rivvi-calls

# SQS Queues
SQS_WEBHOOK_QUEUE=https://sqs.us-east-1.amazonaws.com/123456789012/rivvi-webhook-queue
SQS_WEBHOOK_DLQ=https://sqs.us-east-1.amazonaws.com/123456789012/rivvi-webhook-dlq

# EventBridge
EVENT_BUS_NAME=rivvi-events

# Clerk Authentication
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key

# Retail AI
RETAIL_AI_API_KEY=your_retail_ai_api_key
RETAIL_AI_API_URL=https://api.retail-ai.com/v1

# Rate Limiting
MAX_CONCURRENT_CALLS=20
CALLS_PER_SECOND=5